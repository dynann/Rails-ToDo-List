

<% content_for :title, "New Task" %>

<h1 style="font-family: 'Poppins', sans-serif; color: #333; text-align: center; margin-bottom: 30px;">Create New Todo</h1>
<div class="form-container" style="max-width: 600px; margin: 10px auto; padding: 20px; border: 1px solid #ccc; border-radius: 8px; background-color: #f9f9f9;">

<%= form_with(model: @task, local: true) do |f| %>
  <div class="form-group">
    <div style = "padding-bottom: 10px; font-weight: bold">
    <%= f.label :name, "Task Name" %>
    </div>
    <div style= "width: 300px;" >
    <%= f.text_field :name, class: "form-control", placeholder: "Enter task name" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :category_id, "Category" %>
    <%= f.collection_select :category_id, @categories, :id, :name, prompt: "Select Category", class: "form-control" %>
  </div>

    <div class="form-group" style="text-align: center;">
      <%= f.submit "Submit", style: "background-color: #0080FF; color: white; padding: 10px 20px; border: none; border-radius: 5px; cursor: pointer; font-family: 'Poppins', sans-serif;" %>
    </div>
<div style="margin-top: 20px; display: flex; justify-content: center; gap: 15px; font-family: 'Poppins', sans-serif;">

  <%= link_to "Back to Tasks", tasks_path, 
      style: "background-color: #888888; color: white; padding: 10px 25px; text-decoration: none; border-radius: 5px;" %>
</div>
  </div>
<% end %>
