
<div style="margin-left: 150px; margin-bottom: 20px;">
  <h1>Task List</h1>
  <div>
  <p> sort by : <%= link_to 'status ascending', tasks_path(sort: 'asc'), style: "color: #40B5AD" %> | <%= link_to 'status descending', tasks_path(sort: 'desc'), style: "color: #40B5AD" %>  </p>

  </div>


</div>

<table style="margin: auto; width: 80% ">
  <thead>
    <tr>
      <th>Task Name</th>
      <th>Category <%= link_to '+ add new ', new_category_path, method: :delete, style: "color:black; margin-left: 20px;" %></th>
      <th>Status</th>
      <th>Is_Done</th>
      <th>Customize</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.category.name %></td>
        <td><%= task.status.humanize %></td>
        <td>
  <%= button_to task.is_completed? ? 'Not Yet' : 'Done', 
              toggle_completion_task_path(task), 
              method: :patch, 
              style: "background-color: #6495ED; color: white; padding: 10px 20px; text-decoration: none; border-radius: 5px; width=50%" %>
</td>
        <td>
          <%= link_to 'Edit', edit_task_path(task),  style: "background-color: #0080FF; color: white; padding: 10px 20px; text-decoration: none; border-radius: 5px;" %>
          <%= link_to 'Delete', task_path(task), method: :delete, data: { confirm: 'Are you sure?' },  style: "background-color: red; color: white; padding: 10px 20px; text-decoration: none; border-radius: 5px;" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div style="margin-top: 20px; text-align: center;">
  <%= link_to 'new task', new_task_path, style: "background-color: #40B5AD; color: white; padding: 10px 20px; text-decoration: none; border-radius: 5px;" %>
</div>
