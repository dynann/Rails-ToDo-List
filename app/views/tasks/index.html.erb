<h1>Task List</h1>

<table>
  <thead>
    <tr>
      <th>Task Name</th>
      <th>Category <%= link_to '+ ', new_category_path, method: :delete, style: "color: white; margin-left: 20px;" %></th>
      <th>Status</th>
      <th>Is_Done</th>
      <th>Customize</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.category.name %></td>
        <td><%= task.status.capitalize() %></td>
        <td><%= task.is_completed? ? 'Yes' : 'No' %></td>
        <td>
          <%= link_to 'Edit', edit_task_path(task),  style: "background-color: #0080FF; color: white; padding: 10px 20px; text-decoration: none; border-radius: 5px;" %>
          <%= link_to 'Delete', task_path(task), method: :delete, data: { confirm: 'Are you sure?' },  style: "background-color: red; color: white; padding: 10px 20px; text-decoration: none; border-radius: 5px;" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div style="margin-top: 20px; text-align: center;">
  <%= link_to '+New Task', new_task_path, style: "background-color: green; color: white; padding: 10px 20px; text-decoration: none; border-radius: 5px;" %>
</div>
